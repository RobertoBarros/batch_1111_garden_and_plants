<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @garden.banner_url %>');">
  <div class="container">
    <h1 class="text-center"><%= @garden.name %></h1>
  </div>
</div>

<div class="container">
  <div class="cards mt-3">
    <% @garden.plants.each do |plant| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= plant.image_url %>)">
        <%= plant.name %>

        <%= link_to plant_path(plant), class: 'remove', data: {turbo_method: :delete}  do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>

      </div>
    <% end %>
  </div>

</div>




<div class="row justify-content-center mt-5">
  <div class="col-4">

    <h3>Add new plant:</h3>

    <%= simple_form_for [@garden, @plant] do |f| %>
      <%= f.input :name, placeholder: 'Enter plant name' %>
      <%= f.input :image_url, placeholder: 'Image URL like https://image.com/photo.jpg' %>

      <%= f.submit 'Create Plant', class: 'btn btn-primary' %>

    <% end %>


  </div>
</div>
